{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "noEmit": true,
    "lib": [
      "ES2022"
    ]
  },
  "include": [
    "src/**/*",
    "tsup.config.ts"
  ]
}